<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome.WelcomeActivity">

    <Button
        android:id="@+id/imageButton"
        android:layout_width="@dimen/size_260dp"
        android:layout_height="@dimen/size_35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/size_50dp"
        android:background="@color/color_my_offer"
        android:text="@string/join_to_as"
        android:textColor="@color/color_white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="@dimen/size_0dp"
        app:tabMode="fixed" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_welcome"
        android:layout_width="@dimen/size_73dp"
        android:layout_height="@dimen/size_73dp"
        android:layout_marginBottom="@dimen/size_70dp" />

</RelativeLayout>